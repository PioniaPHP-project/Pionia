{
    "name": "pionia/pionia-core",
    "description": "This is the core of the Pionia PHP framework. It is a simple and lightweight PHP framework that is designed to be fast and easy to use.",
    "type": "library",
    "license": "MIT",
    "keywords": ["php", "framework", "jet2018", "service", "j2j", "Pioneer", "Pionia", "architecture", "performance"],
    "autoload": {
        "psr-4": {
            "Pionia\\": "src/",
            "Application\\": "example/",
            "Application\\Services\\": "example/services/",
            "Application\\Switches\\": "example/switches/"
        }
    },
    "authors": [
        {
            "name": "jet2018",
            "email": "ezrajet9@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "beta",
    "prefer-stable": false,
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php": ">=8.0"
    },
    "require": {
        "ext-json": "*",
        "ext-pdo": "*",
        "symfony/http-kernel": "^6.4",
        "symfony/routing": "^6.4",
        "symfony/console": "^6.4",
        "monolog/monolog": "^3.6",
        "nette/php-generator": "^4.1",
        "doctrine/inflector": "^2.0",
        "symfony/filesystem": "^7.1",
        "fruitcake/php-cors": "^1.3",
        "psr/container": "^2.0",
        "symfony/finder": "^7.1",
        "php-di/php-di": "^7.0",
        "symfony/dotenv": "^7.1",
        "symfony/process": "^7.1",
        "symfony/event-dispatcher": "^7.1",
        "pionia/porm": "^1.0",
        "nesbot/carbon": "^3.8",
        "symfony/uid": "^7.1",
        "ext-pcntl": "*"
    },
    "provide": {
        "psr/container-implementation": "1.0"
    },
    "scripts": {
        "test": "phpunit",
        "document": "phpDocumentor run -d . -t docs/ --config=phpdoc.dist.xml --force"
    }
}
